<?php
function practice_area_img($img_path)
{
	$items = "";
	$files = glob($img_path . "/*.*");
	for ($i=0; $i<count($files); $i++)
	{
		$num = basename($files[$i]);

		$pages_base = "/public_html";
		$server_pages_base = "http://www.mmacadvocates.com";
		$img_url = str_replace($pages_base, $server_pages_base, $img_path);

		$items .= <<<HTML
		<div class="item">						
			<img src="$img_url/$num" class="img-responsive" alt="">
		</div>
HTML;
	}
	return $items;
}
?>